<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id_string"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

    <TextView
        android:id="@+id/fromName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from_name_string"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_string"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

    <TextView
        android:id="@+id/commentLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comment_string"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

    <TextView
        android:id="@+id/likeLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/like_string"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@android:color/transparent" />

</LinearLayout>